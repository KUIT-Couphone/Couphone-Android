<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchment_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/search_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여러 쿠폰들을"
            android:textSize="23sp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/search_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한번에 검색해보세요"
            android:textSize="23sp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_tv1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment"
        android:orientation="vertical"
        android:id="@+id/search_ll"
        app:layout_constraintTop_toBottomOf="@id/searchment_cl">

        <FrameLayout
            android:id="@+id/search_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/search_cl"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/search_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/baseline_search_24"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <Button
                android:id="@+id/arrowupward_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:src="@drawable/baseline_arrow_upward_24"
                android:background="@drawable/circle_shape" />



            <EditText
                android:id="@+id/search_et"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="13sp"
                android:hint="지갑 속에서 헤매지말고 쿠폰에서 검색!"
                app:layout_constraintStart_toEndOf="@id/search_iv"
                app:layout_constraintEnd_toStartOf="@id/arrowupward_btn" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/latest_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/latest_cl"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/latest_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/baseline_access_time_24"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/arrowoutward_cl"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_gravity="right" >

                <ImageButton
                    android:id="@+id/arrowoutward_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_arrow_outward_24"
                    android:background="@color/white"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/latest_et"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="13sp"
                android:hint="최근 검색어 출력"
                app:layout_constraintStart_toEndOf="@id/search_iv"
                app:layout_constraintEnd_toStartOf="@id/arrowoutward_cl" />


        </FrameLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/categoryment_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/search_ll">

        <TextView
            android:id="@+id/category_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어떤 매장 쿠폰을 찾고 계신가요?"
            android:textSize="23sp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/category_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리로 분류해서 알려드려요!"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_tv1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/category_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/categoryment_cl"
        android:layout_marginTop="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/entertainment_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">

            <ImageView
                android:id="@+id/entertainment_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/baseline_access_time_24"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="문화"
                android:textSize="20sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/entertainment_iv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cafe_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/cafe_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/baseline_access_time_24"

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="카페"
                android:textSize="20sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/cafe_iv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mart_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <ImageView
                android:id="@+id/mart_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/baseline_access_time_24" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="마트"
                android:textSize="20sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/mart_iv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>