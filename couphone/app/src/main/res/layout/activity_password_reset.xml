<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F9F1EC"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/register_upperbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/iphone_status_bar_upper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/register_logo"
        android:layout_width="99.61dp"
        android:layout_height="100.21dp"
        android:src="@drawable/logo"
        android:layout_marginHorizontal="155dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/register_upperbar"
        app:layout_constraintTop_toBottomOf="@+id/register_upperbar"/>


    <ImageView
        android:id="@+id/register_title"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:src="@drawable/couphone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_logo"/>

    <TextView
        android:id="@+id/text_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 이름"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/line_seed_sans_bold"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/register_title"
        app:layout_constraintTop_toBottomOf="@id/register_title"/>

    <LinearLayout
        android:id="@+id/register_text1"
        android:layout_width="278dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/textbox"
        android:orientation="horizontal"
        android:focusableInTouchMode="true"
        app:layout_constraintStart_toStartOf="@id/text_username"
        app:layout_constraintTop_toBottomOf="@id/text_username">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호 입력"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/line_seed_sans_bold"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/register_title"
        app:layout_constraintTop_toBottomOf="@id/register_text1"/>


    <LinearLayout
        android:id="@+id/register_text2"
        android:layout_width="197dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/textbox"
        android:orientation="horizontal"
        android:focusableInTouchMode="true"
        app:layout_constraintStart_toStartOf="@id/text_phonenumber"
        app:layout_constraintTop_toBottomOf="@id/text_phonenumber">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:textColor="@color/black"/>
    </LinearLayout>

    <Button
        android:id="@+id/register_button1"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/verification_button"
        android:backgroundTint="@null"
        android:text="인증번호 받기"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:fontFamily="@font/line_seed_sans_bold"
        app:layout_constraintStart_toEndOf="@+id/register_text2"
        app:layout_constraintTop_toBottomOf="@id/text_phonenumber"/>


    <TextView
        android:id="@+id/text_verification_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메세지로 전송된 6자리 인증번호 입력"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/line_seed_sans_bold"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/register_title"
        app:layout_constraintTop_toBottomOf="@id/register_text2"/>

    <LinearLayout
        android:id="@+id/register_text3"
        android:layout_width="278dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/textbox"
        android:orientation="horizontal"
        android:focusableInTouchMode="true"
        app:layout_constraintStart_toStartOf="@id/text_verification_code"
        app:layout_constraintTop_toBottomOf="@id/text_verification_code">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="변경할 비밀번호 입력"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/line_seed_sans_bold"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@id/register_title"
        app:layout_constraintTop_toBottomOf="@id/register_text3"/>

    <LinearLayout
        android:id="@+id/register_text4"
        android:layout_width="278dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/textbox"
        android:orientation="horizontal"
        android:focusableInTouchMode="true"
        app:layout_constraintStart_toStartOf="@id/text_password"
        app:layout_constraintTop_toBottomOf="@id/text_password">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:textColor="@color/black"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/password_lock1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/lock_square"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="243dp"
        app:layout_constraintStart_toStartOf="@+id/register_text4"
        app:layout_constraintTop_toTopOf="@id/register_text4"/>

    <TextView
        android:id="@+id/text_password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="변경할 비밀번호 재확인"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/line_seed_sans_bold"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/register_title"
        app:layout_constraintTop_toBottomOf="@id/register_text4"/>

    <LinearLayout
        android:id="@+id/register_text5"
        android:layout_width="278dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/textbox"
        android:orientation="horizontal"
        android:focusableInTouchMode="true"
        app:layout_constraintStart_toStartOf="@id/text_password2"
        app:layout_constraintTop_toBottomOf="@id/text_password2">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:textColor="@color/black"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/password_lock2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/lock_square"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="243dp"
        app:layout_constraintStart_toStartOf="@+id/register_text5"
        app:layout_constraintTop_toTopOf="@id/register_text5"/>

    <Button
        android:layout_width="278dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/register_button"
        android:text="변경하기"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:fontFamily="@font/line_seed_sans_bold"
        app:layout_constraintStart_toStartOf="@id/register_text5"
        app:layout_constraintTop_toBottomOf="@id/register_text5"/>



</androidx.constraintlayout.widget.ConstraintLayout>